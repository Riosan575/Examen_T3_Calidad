<div class="text-center mb-5">
    <h1>Registrarse</h1>
</div>
<div class="text-center">
    <form action="/auth/register" method="post">
        <div class="mb-2">
            <input class="form-group" type="text" name="Username" placeholder="Usuario" />
        </div>
        <div class="mb-2">
            <input class="form-group" type="password" name="Password" placeholder="Contraseña" />
        </div>
        <div class="mb-2">
            <button class="btn btn-primary">Iniciar Sesión</button>
        </div>
    </form>
</div>